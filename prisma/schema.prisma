// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  username String @id
  no_hp String @db.VarChar(13)
  password String
  product Product[]
  report Report[]
  refresh_token String?

  @@map("admin")
}

model User {
  username String @id
  no_hp String @db.VarChar(13)
  alamat String? @db.Text()
  password String
  cart Cart[]
  order Order[]
  refresh_token String?

  @@map("user")
}

model Product {
  id Int @id @default(autoincrement())
  product_name String 
  price Int @default(0)
  description String 
  picture String
  stock Int @default(0)
  username_admin String
  category_id Int
  admin Admin @relation(fields: [username_admin], references: [username])
  category Category @relation(fields: [category_id], references: [id])
  Cart Cart[]

  @@map("product")
}

model Category {
  id Int @id @default(autoincrement())
  category_name String @db.VarChar(40)
  product Product[] 

  @@map("category")
}

model Cart {
  id Int @id @default(autoincrement())
  total_price Int @default(0)
  username_user String
  product_id Int
  user User @relation(fields: [username_user], references: [username])
  product Product @relation(fields: [product_id], references: [id])
  order Order[]

  @@map("cart")
}

model Order {
  id Int @id @default(autoincrement())
  proof String @db.VarChar(20)
  status String @db.VarChar(20)
  username_user String
  cart_id Int @unique
  user User @relation(fields: [username_user], references: [username])
  cart Cart @relation(fields: [cart_id], references: [id])
  report Report?

  @@map("order")
}

model Report {
  id Int @id @default(autoincrement())
  date DateTime @db.DateTime() @default(now())
  username_admin String 
  order_id Int @unique
  admin Admin @relation(fields: [username_admin], references: [username])
  order Order @relation(fields: [order_id], references: [id])

  @@map("report")
}